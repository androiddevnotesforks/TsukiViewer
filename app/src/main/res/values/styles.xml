<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="tag_left_cardview" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#666666</item>
        <item name="shapeAppearanceOverlay">@style/tag_left_cardview_cornerradius</item>
    </style>

    <style name="tag_left_cardview_cornerradius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="tag_right_cardview" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/tag_right_cardview_cornerradius</item>
        <item name="cardBackgroundColor">#323232</item>
    </style>

    <style name="tag_right_cardview_cornerradius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="WhiteProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ChipEntryWithoutTicks" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

</resources>
