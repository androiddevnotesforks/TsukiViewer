<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.reader.ReaderActivity">

    <!--android:animateLayoutChanges=true need to be in root layout in order to work -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="#6D313335"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            tools:title="Himekawa" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.flamyoad.tsukiviewer.utils.HackyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <View
        android:id="@+id/bottomSheetOpener"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom" />

    <com.google.android.material.card.MaterialCardView
        style="@style/doujin_item_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end">

        <TextView
            android:id="@+id/txtCurrentPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5A5757"
            android:gravity="center"
            android:minWidth="80dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:textColor="@android:color/white"
            tools:text="10/200" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/readerStyleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:animateLayoutChanges="true"
        android:background="#6D313335"
        android:visibility="invisible"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnChangeReadStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:drawableTop="@drawable/ic_screen_rotation_white_24dp"
            android:drawablePadding="4dp"
            style="@style/appcompat_button"
            android:lines="2"
            android:paddingVertical="12dp"
            android:text="Change \nview style" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="bottom"
        android:animateLayoutChanges="true"
        android:visibility="invisible"
        tools:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottomListThumbnails"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/bottom_thumbnail_border" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>