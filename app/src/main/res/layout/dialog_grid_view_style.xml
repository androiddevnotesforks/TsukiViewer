<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <TextView
            style="@style/doujin_sort_label_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Style"
            android:elevation="4dp"/>

        <TextView
            android:id="@+id/btnGrid"
            style="@style/doujin_sort_label_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_view_grid"
            android:drawablePadding="8dp"
            android:text="Grid"
            android:textColor="@color/blackOlive"
            app:layout_flexBasisPercent="33.3%"
            tools:background="#E4E4E4" />

        <TextView
            android:id="@+id/btnScaled"
            style="@style/doujin_sort_label_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_view_scaled"
            android:drawablePadding="8dp"
            android:text="Scaled"
            android:textColor="@color/blackOlive"
            app:layout_flexBasisPercent="33.3%" />

        <TextView
            android:id="@+id/btnRow"
            style="@style/doujin_sort_label_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_view_row"
            android:drawablePadding="8dp"
            android:text="Row"
            android:textColor="@color/blackOlive"
            app:layout_flexBasisPercent="33.3%" />

        <TextView
            android:id="@+id/btnList"
            style="@style/doujin_sort_label_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableTop="@drawable/ic_view_list"
            android:drawablePadding="8dp"
            android:text="List"
            android:textColor="@color/blackOlive"
            app:layout_flexBasisPercent="100%" />

    </com.google.android.flexbox.FlexboxLayout>

</androidx.core.widget.NestedScrollView>